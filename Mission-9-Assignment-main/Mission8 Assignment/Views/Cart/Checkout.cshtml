
@{
}
@model Cart

<h2>Check out now</h2>
<h2>Please enter your details</h2>



    <form method="post" asp-controller="Cart" asp-action="Checkout">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">name:</label><input asp-for="Name" class="form-control" />
        </div>

        <h4>Address</h4>

        <div class="form-group">
            <label asp-for="AddressLine1">Address Line 1:</label>
            <input asp-for="AddressLine1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AddressLine2">Address Line 2:</label>
            <input asp-for="AddressLine2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AddressLine3">Address Line 3:</label>
            <input asp-for="AddressLine3" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="City">City:</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="state">state:</label>
            <input asp-for="state" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Zip">Zip:</label>
            <input asp-for="Zip" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="country">country:</label>
            <input asp-for="country" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="card">card:</label>
            <input asp-for="card" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="scuritynumber">scuritynumber:</label>
            <input asp-for="scuritynumber" class="form-control" />
        </div>

        <div class="float-end">

            <input class="btn btn-primary" type="submit" value="Checkout" />

        </div>
    </form>
